<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarAction"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:titleTextColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/search"
        android:background="@color/colorPrimary"
        app:menu="@menu/action_menu">

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolBarAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_group_323" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_below="@id/img1"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_group_323" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_below="@id/img2"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_group_323" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBarAction"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="text"
        android:padding="8dp"
        android:hint="@string/search"
        android:textSize="@dimen/margin_standard"
        android:textColorHint="#A3000000"
        android:textColor="@color/black"
        android:layout_margin="@dimen/margin_standard"
        android:background="@drawable/search_backgrount"
        android:drawableStart="@drawable/ic_baseline_search_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        app:spanCount="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>